{
    "info": {
        "_postman_id": "11111111-2222-3333-4444-555555555555",
        "name": "DevPocket Pro - Auth & Payload Suite",
        "description": "Exhaustive tests for Bearer Auth, Basic Auth, and Complex JSON Payloads using httpbin.org",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Bearer Authentication",
            "request": {
                "method": "GET",
                "auth": {
                    "type": "bearer",
                    "bearer": [
                        {
                            "key": "token",
                            "value": "mytoken123"
                        }
                    ]
                },
                "url": {
                    "raw": "https://httpbin.org/bearer"
                }
            }
        },
        {
            "name": "2. Basic Authentication",
            "request": {
                "method": "GET",
                "auth": {
                    "type": "basic",
                    "basic": [
                        {
                            "key": "username",
                            "value": "user"
                        },
                        {
                            "key": "password",
                            "value": "pass"
                        }
                    ]
                },
                "url": {
                    "raw": "https://httpbin.org/basic-auth/user/pass"
                }
            }
        },
        {
            "name": "3. Complex POST (Nested JSON)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"user\": {\n    \"id\": \"dp-456\",\n    \"roles\": [\"admin\", \"tester\"],\n    \"settings\": {\n      \"theme\": \"dark\",\n      \"notifications\": true\n    }\n  },\n  \"action\": \"integration-test\",\n  \"timestamp\": \"{{$timestamp}}\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "https://httpbin.org/post"
                }
            }
        },
        {
            "name": "4. Form Data Submission",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "app_name",
                            "value": "DevPocket"
                        },
                        {
                            "key": "version",
                            "value": "1.3.0"
                        }
                    ]
                },
                "url": {
                    "raw": "https://httpbin.org/post"
                }
            }
        },
        {
            "name": "5. PATCH Partial Update",
            "request": {
                "method": "PATCH",
                "body": {
                    "mode": "raw",
                    "raw": "{\"status\": \"partially-completed\"}"
                },
                "url": {
                    "raw": "https://httpbin.org/patch"
                }
            }
        }
    ]
}